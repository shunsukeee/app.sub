<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<span><%= book.title %></span>
</td>
<td>
<span><%= book.body %></span>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>




</td>
</tr>
<% end %>
</tbody>
</table>



<h2>New book</h2>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>


</body>
</html>